{% case media.media_type %}
    {% when 'image' %}
        <img
            class="w-full h-auto"
            src="{{ media | image_url }}"
            alt="{{ media.preview_image.alt }}"
          >
    {% when 'external_video' %}
        {{ media | external_video_tag : class: "w-full h-full object-cover" }}
    {% when 'video' %}
        {{ media | video_tag : class: "w-full h-full object-cover" }}
    {% when 'model' %}
        {{ media | model_viewer_tag }}
    {% else %}
        {{ media | media_tag }}
{% endcase %}