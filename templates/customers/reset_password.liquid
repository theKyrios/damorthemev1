<div class="w-screen md:w-[50vw] lg:h-[90vh] border-gray-500 border-b-[1px] border-r-[1px] flex justify-center items-center px-8">
  <div class="w-full mb-8 mt-10">
    <h5 class="text-[1rem] sm:text-[1.2rem] md:text-[1.4rem] font-light">Reset Password</h5>
    {% form 'reset_customer_password' %}
      {% if form.errors %}
        <div class="reltive mt-2" role="alert">
          <p class="" style="color:red">{{ form.errors | default_errors }}</p>
        </div>
      {% endif %}

      <p class="mt-6 mb-6">New Passoword</p>
      <input
        type="password"
        name="customer[password]"
        class="border-b-[1px] border-gray-600 outline-none focus:ring-0 w-full md:w-4/5"
      >
      <p class="my-6">Confirm Password</p>
      <input
        type="password"
        name="customer[password_confirmation]"
        class="border-b-[1px] border-gray-600 outline-none focus:ring-0 w-full md:w-4/5"
      >
      <button type="submit" class="mt-6 h-fit py-2 rounded-3xl border border-gray-600 w-full md:w-4/5">Sign up</button>
    {% endform %}
    <a href="{{ routes.account_login_url }}" class="mt-4"><p class="mt-4">Login</p></a>
  </div>
</div>
