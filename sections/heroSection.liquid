<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
  href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,500&display=swap"
  rel="stylesheet"
>

<style>
  h4,
  h5,
  p,
  button,a,
  label {
    font-family: 'Kanit', sans-serif;
  }
</style>

<section class="">
  <div
    class="hero_wrapper flex h-auto w-auto justify-center"
  >
    <img height="auto" width="auto" src="https://jugaadtee.in/cdn/shop/files/solidsbanner.png?v=1705172320&width=1780">
    {% comment %}
      <h4 class="mt-auto h-fit w-fit overflow-hidden font-extralight text-center text-[80px] text-[#fcfcfc] sm:text-[100px] md:text-[180px] lg:text-[300px]">
        DAMOR
      </h4>
    {% endcomment %}
  </div>
</section>

<!-- Product Grid -->
<section
  id="ps01r"
  class="bg-[#fcfcfc] grid grid-cols-2 sm:grid-cols-4 divide-x-[1px] divide-y-[1px] divide-gray-500 border border-gray-500"
>
  <div id="tc02p" class="p-4 w-full h-fit">
    <h4 id="he01c" class="mb-5">New In</h4>
    <a
      id="be02c"
      class="border border-gray-400 w-fit h-fit px-4 py-2 cursor-pointer"
      href="{{ collections["thegogh"].url }}"
      ><label class="cursor-pointer">View All</label></a
    >
  </div>
  {% comment %}
    <div class="p-1 h-fit w-full">
      <img class="h-auto w-full flex justify-center mx-auto" src="https://ik.imagekit.io/zemurqxma/Damor/pexels-photo-5191436.jpeg_auto=compress&cs=tinysrgb&w=800&lazy=load?updatedAt=1699777876005">
      <div class="flex">
        <p class="flex flex-grow text-[0.7rem] font-extralight">DAMOR</p>
        <p class="text-[0.7rem] font-extralight">INR 4,500</p>
      </div>
      <h4 class="text-[0.9rem] font-extralight pt-1">LIGHT OLIVE OXFORD SHIRT </h4>
    </div>
  {% endcomment %}
  {% for product in collections.thegogh.products %}
    <div class="p-1 h-fit w-full border-b-[1px] border-r-[1px] border-gray-500">
      <a href="{{ product.url }}">
        <img class="h-auto w-full flex justify-center mx-auto" src="{{ product.featured_image | image_url }}">
        <div class="flex">
          <p class="flex flex-grow text-[0.7rem] font-extralight">JUGAAD</p>
          <p class="text-[0.7rem] font-extralight">INR {{ product.price | money_without_currency }}</p>
        </div>
        <h4 class="text-[0.9rem] font-extralight pt-1">{{ product.title | upcase }}</h4>
        <h4 class="text-[0.6rem] sm:text-[0.8rem] md:text-[1rem] font-extralight text-green-600 bg-green-200 w-fit my-2 px-2 py-1">
          Sale Price :
          <b> INR {{ product.metafields.custom.customprice | minus: product.metafields.custom.discount -}}</b>
        </h4>
      </a>
    </div>
  {% endfor %}
</section>
<!-- Product Grid End -->

