        <button type="submit" class="px-6 sm:px-8 mt-2 flex items-center justify-center border border-gray-500 font-normal">Search</button>
        </div>
        <div class="search_trigger_close mr-auto cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-[24px] h-[24px]">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
          
        </div>
      </div>
    </form>
